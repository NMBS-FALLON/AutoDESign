<Page x:Class="AutoDESign.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoDESign.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage"
      MinHeight="450">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Name="btnAddSelfWeight" Grid.Row="0" Background="LightBlue" BorderBrush="Black" Click="btnAddSelfWeight_OnClick" ClickMode="Press" Margin="20,10,20,20" >Add Self Weight</Button>
        <Button Name="btnSetInertiaChords" Grid.Row="1" Background="LightBlue" BorderBrush="Black" Click="btnSetInertiaChords_OnClick" ClickMode="Press" Margin="20,10,20,10">Set Inertia Chords</Button>
        <Button Name="btnModifyJoists" Grid.Row="2" Background="LightBlue" BorderBrush="Black" Click="btnModifyJoists_OnClick" ClickMode="Press" Margin="20,10,20,10">Modify Joists</Button>
    </Grid>
</Page>
