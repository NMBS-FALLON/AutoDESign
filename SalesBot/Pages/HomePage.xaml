<Window x:Class="SalesBot.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" Width="506" Height="349"
      >

    <DockPanel LastChildFill="True">
        <Separator DockPanel.Dock="Top" Template="{StaticResource HorzontalSeperator}" BorderBrush="Black"  />
        <Label DockPanel.Dock="Top" FontSize="20" Margin="10,5">SALES BOT</Label>
        <Separator DockPanel.Dock="Top" Template="{StaticResource HorzontalSeperator}"  />
        <StackPanel DockPanel.Dock="Left">
            <Button Name="btnTakeoffConversion" Click="btnTakeoffConversion_OnClick" ClickMode="Press" >Takeoff Conversion</Button>
            <Button Name="btnJediModifications" Click="btnJediModifications_OnClick" ClickMode="Press" >Jedi Modifications</Button>
        </StackPanel>
        <Separator DockPanel.Dock="Left" Template="{StaticResource VerticalSeperator}" />
        <Frame Name="MainFrame" DockPanel.Dock="Right" VerticalAlignment="Top" HorizontalAlignment="Left" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
